<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="bookland_jpa">

		<class>edu.msg.bookland.model.Author</class>
		<class>edu.msg.bookland.model.User</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/library?useSSL=false" />
			<property name="javax.persistence.jdbc.user" value="library_admin" />
			<property name="javax.persistence.jdbc.password" value="library_admin_pass" />
			<property name="hibernate.default_schema" value="library" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		</properties>
	</persistence-unit>
</persistence>