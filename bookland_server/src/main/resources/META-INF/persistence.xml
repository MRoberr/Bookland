<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="edu.msg.bookland.jpa">

		<class>edu.msg.bookland.model.Author</class>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/library"/>
			<property name="hibernate.connection.username" value="library_admin"/>
			<property name="hibernate.connection.password" value="library_admin_pass"/>
			<property name="hibernate.default_schema" value="library"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>